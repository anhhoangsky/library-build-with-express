html
    head
        title Library - #{ title ? title : "Welcome"}
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
        style
            include ../includes/style/common.style.css
        script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js')
    body
        nav.navbar.navbar-expand-sm.bg-dark.navbar-dark.sticky-top
            button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarTogglerDemo01", aria-controls="navbarTogglerDemo01", aria-expanded="false", aria-label="Toggle navigation")
                span.navbar-toggler-icon
            div(class="collapse navbar-collapse", id="navbarTogglerDemo01")
                a.navbar-brand(href='/')
                    img(src='/img/toast.jpg', alt='logo', style='width:40px;')
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/') Home
                    li.nav-item
                        a.nav-link(href='/bookshelf') Bookshelf
                    li.nav-item
                        a.nav-link(href='#') Contact
            if username
                a.btn.btn-outline-danger.my-2.my-sm-0.nav-link(href='/logout') Logout
            else
                a.btn.btn-outline-success.my-2.my-sm-0.nav-link(href='/login') Login
        .container-fluid
            block content
    footer
        .blockquote-footer.text-center @create by Nguyễn Hoàng Anh

